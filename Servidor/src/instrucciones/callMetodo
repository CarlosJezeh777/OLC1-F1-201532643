import { Instruccion } from "../abstract/instruccion";
import { Environment } from "../symbols/enviroment";

export class callMetodo extends Instruccion {
    constructor(
        public id:string,
        line: number, 
        column : number
    ) {
        super(line,column);
    }

    public ejecutar(env:Environment) {
       
        
        console.log(this);
        const x= env.get_metodo(this.id)
        console.log(x);

        //si lo encontro
        //new env para declarar los parametros
        let env_para_parametros= new Environment(env);        
        

        if (x== null) {
            throw "Error semantico, no ecnontre esta funcion"
        }

        x.bloque.executar(env_para_parametros)
        

        return "este dato nunca lo he usado"
        

    }
}